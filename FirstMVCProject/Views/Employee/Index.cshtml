
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/EmployeeLayout.cshtml";
}
@model List<FirstMVCProject.Models.Employee> 
<h2>Index</h2>
<span id="Date"></span>
<input id"GetDateWithJson" type="submit" value="Get Date"
<table>
    <tr> 
        <th>ID</th>
        <th>Name</th>
        <th>Salary</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
        </tr>
    }
</table>

<script src="~/Content/jquery.js"></script>

